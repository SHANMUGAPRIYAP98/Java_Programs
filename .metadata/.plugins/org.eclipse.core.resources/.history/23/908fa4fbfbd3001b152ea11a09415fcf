package com.srm.oops;

class Number
{
	private double value;
	Number(double value)
	{
		this.value=value;
	}
	boolean isZero()
	{
		if(this.value==0)
		{
			System.out.println("The Given Value is : "+this.value);
			return true;
		}
		else
		{
			System.out.println("The Given Value is : "+this.value+" - Non-Zero Value");
			return false;
		}
	}
	boolean isPositive(double value)
	{
		if(value>0)
		{
			System.out.println(value+" is a positive number");
			return true;
		}
		else
		{
			return false;
		}
		
	}
	boolean isNegative(double value)
	{
		if(value<0)
		{
			System.out.println(value+" is a negative number");
			return true;
		}
		else
		{
			return false;
		}
	}
	boolean isOdd()
	{
		if(this.value%2!=0)
		{
			System.out.println(this.value+" is a odd number");
			return true;
		}
		else
		{
			return false;
		}
	}
	boolean isEven()
	{
		if(this.value%2==0)
		{
			System.out.println(this.value+" is a even number");
			return true;
		}
		else
		{
			return false;
		}
	}
	boolean flag=false;
	boolean isPrime()
	{
		for(int i=2;i<=this.value/2;i++)
		{
			if(this.value%i==0)
			{
				System.out.println(this.value+" is not a prime number");
				flag=true;
				break;
			}
		}
		if(flag==false)
		{
			System.out.println(this.value+" is a prime number");
		}
		return true;
	}
	boolean isArmStrong()
	{
		double temp=this.value;
		
		double sum=0,digits=0;
		while(this.value!=0)
		{
			digits=this.value%10;
			sum=sum+Math.pow(digits,3);
			this.value=this.value/10;
		}
		if(temp==sum)
		{
			System.out.println(temp+" is an ArmStrong Number");
		}
		else
		{
			System.out.println(temp+" is not an ArmStrong Number");
		}
		return true;
	}
	double factorial()
	{
		double fact=1,count=1;
		for(;count<=this.value;count++)
		{
			fact=fact*count;
		}
		System.out.println("Factorial : "+fact);
		return fact;
	}
	double sqr()
	{
		return this.value*this.value;
	}
	double sqrt()
	{
		return Math.sqrt(this.value);
	}
	double sumOfDigits()
	{
		double digits=0,sum=0;
		while(this.value!=0)
		{
			digits=this.value%10;
			sum=sum+digits;
			this.value=this.value/10;
		}
		System.out.println("Sum of the Digits : "+sum);
		return sum;
	}
	double reverse()
	{
		double rev=0,digits=0;
		while(this.value!=0)
		{
			digits=this.value%10;
			rev=rev*10+digits;
			this.value=this.value/10;
		}
		System.out.println("Reverse of a Number : "+rev);
		return rev;
	}
}
public class NumberDemo {

	public static void main(String[] args) {
		
	}

}
