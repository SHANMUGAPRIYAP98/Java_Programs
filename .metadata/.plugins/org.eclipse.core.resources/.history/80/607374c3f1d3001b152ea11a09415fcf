package com.srm.oops;

import java.util.Scanner;

class Electricity
{
	int consumerNo;
	String consumerName;
	float previousMonth;
	float currentMonth;
	float units;
	float cost;
	float totalCost;
	String EBType;
    void tariffCalc(String EBType)
    {
    	
    	if(EBType.toLowerCase()=="domestic")
    	{
    		
    		if(this.units>501)
    		{
    			cost=this.units*6;
    			this.totalCost=this.previousMonth*cost+this.currentMonth*cost;
    		}
    		else if(this.units>=201&&this.units<=500)
    		{
    			cost=this.units*4;
    			this.totalCost=this.previousMonth*cost+this.currentMonth*cost;
    		}
    		else if(this.units>=101&&this.units<=200)
    		{
    			cost=this.units*2.5f;
    			this.totalCost=this.previousMonth*cost+this.currentMonth*cost;
    		}
    		else
    		{
    			cost=1;
    			this.totalCost=this.previousMonth*cost+this.currentMonth*cost;
    		}
    	}
    	else
    	{
    		if(this.units>501)
    		{
    			cost=this.units*7;
    			this.totalCost=this.previousMonth*cost+this.currentMonth*cost;
    		}
    		else if(this.units>=201&&this.units<=500)
    		{
    			cost=this.units*6;
    			this.totalCost=this.previousMonth*cost+this.currentMonth*cost;
    		}
    		else if(this.units>=101&&this.units<=200)
    		{
    			cost=this.units*4.5f;
    			this.totalCost=this.previousMonth*cost+this.currentMonth*cost;
    		}
    		else
    		{
    			cost=2;
    			this.totalCost=this.previousMonth*cost+this.currentMonth*cost;
    		}
    	}
    }
    
    void displayData() {
    	System.out.println("----------------------------ELECTRICITY BILL------------------------------");
    	System.out.println("Consumer No"+"\t"+"Consumer Name"+"\t"+"EB Type"+"Previous Unit"+"\t"+"Current Unit"+"\t"+"Total Cost");
    	System.out.println(this.consumerNo+"\t"+this.consumerName+"\t"+this.EBType+"\t"+this.previousMonth+"\t"+this.currentMonth+"\t"+this.totalCost);
    }
	
}
public class ElectricityBill {

	public static void main(String[] args) {
		System.out.println("Enter the Consumer No : ");
		Scanner sc=new Scanner(System.in);
		int cno=sc.nextInt();
		System.out.println("Enter the Consumer Name : ");
		String cname=sc.next();
		System.out.println("Enter the Previous Units  : ");
		float punits=sc.nextFloat();
		System.out.println("Enter the Current Units  : ");
		float cunits=sc.nextFloat();
		System.out.println("Enter the EB Type [ DOMESTIC,COMMERCIAL] : ");
		String eb=sc.next();
		Electricity elec=new Electricity();
		elec.tariffCalc(eb);
		elec.displayData();

	}

}
