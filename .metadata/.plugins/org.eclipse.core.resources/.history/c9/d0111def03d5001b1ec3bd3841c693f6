package com.srm.distance;

public class DistanceConverter {
double metreToKm(double metre,double km)
{
	km=metre*0.001;
	return km;
}
double milesToKm(double miles,double km)
{
	km=miles*1.60934;
	return km;
}
double kmToMetre(double metre,double km)
{
	metre=km*1000;
	return metre;
}
double milesToKm(double miles,double km)
{
	km=miles*1.60934;
	return km;
}
}
