package com.srm.time;

public class TimeConverter {
	double min,sec,hour;
double hourToMin(double hour)
{
	min=hour*60;
	return min;
}
double hourToSec(double hour)
{
	sec=hour*60*60;
	return sec;
}
double minToHour(double min)
{
	hour=min/60;
	return min;
}
double secToHour(double sec)
{
	hour=sec/3600;
	return sec;
}
}
